<main>
	<form class="main-form" action="/admin/product" method="POST">
		<h1>Edit Product</h1>
			<label for="title">Title</label>
			<input class="form-input"
			       type="text"
			       name="title"
			       autocomplete="off"
			       value="{{product.title}}"/>
			<label for="imageUrl">Image</label>
			<input type="text"
			       name="imageUrl"
			       value="{{product.imageUrl}}"
			       autocomplete="off">
			<label for="">Price</label>
			<input type="number"
			       name="price"
			       step="0.01"
			       value="{{product.price}}"
			       autocomplete="off">
			<label for="">Description</label>
			<textarea name="description"
			          cols="30"
			          rows="10">
				{{product.description}}
			</textarea>
			<button class="btn" type="submit">Edit Product</button>
	</form>
</main>
